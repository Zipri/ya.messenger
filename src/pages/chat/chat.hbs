<main class="chat-page">
    <div class="chat-page__sidebar">
        {{{chatList}}}
    </div>
    {{#if (eq chatState 'dialog')}}
        {{{dialog}}}
    {{/if}}
    {{#if (eq chatState 'empty')}}
        <div class="chat-page__main">
            <div class="chat-page__main__placeholder">
                Выберите чат, чтобы отправить сообщение
            </div>
        </div>
    {{/if}}
</main>
